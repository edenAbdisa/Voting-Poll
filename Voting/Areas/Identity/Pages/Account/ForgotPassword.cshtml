@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password? Enter email to recieve email.";
}


<div class="row" style=" padding-left: 30%; padding-right: 30%;align-content:center;">
    <h4>@ViewData["Title"]</h4>
    <hr />
    <form method="post" style="width: 100%;">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" class="form-control" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-default" style="margin-left:30%;margin-right:30%;width:40%;">Submit</button>
    </form>

</div>

        @section Scripts {
            <partial name="_ValidationScriptsPartial" />
        }
