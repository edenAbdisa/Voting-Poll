@model Voting.Models.Election

@{
    ViewData["Title"] = "Create";
}


<h4 style="text-align:center;">Election</h4>
<hr />
<div class="row" style=" padding-left: 30%; padding-right: 30%;align-content:center;">
     <br/>
        <h5 style="text-align:center">@ViewBag.Result</h5>
        <form asp-action="Create" style="width: 100%;" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input ui-date="opts" ng-model="data.valor" asp-for="StartDate" class="form-control">
                </input>
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input ui-date="opts" ng-model="data.valor" asp-for="EndDate" class="form-control">
                </input>
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control">
                    <option value="avaliable">Avaliable</option>
                    <option value="end">Closed</option>
                    <option value="future">Not Opened Yet</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" style="margin-left:30%;margin-right:30%;width:40%;" />
            </div>
        </form>
    </div>
 

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
